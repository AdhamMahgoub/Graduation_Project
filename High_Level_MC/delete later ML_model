import subprocess

def get_gpu_status():
    try:
        result = subprocess.run(['tegrastats'], stdout=subprocess.PIPE, stderr=subprocess.PIPE, text=True)
        if result.returncode == 0:
            return result.stdout
        else:
            print(f"Error running tegrastats: {result.stderr}")
            return None
    except FileNotFoundError:
        print("tegrastats not found. Make sure it's installed and in your PATH.")
        return None

gpu_status = get_gpu_status()
if gpu_status:
    print("GPU Status:")
    print(gpu_status)








import cv2

Camera Feed
import cv2

def show_live_feed():
    cap = cv2.VideoCapture(0)

    while True:
        ret, frame = cap.read()
        cv2.imshow('Live Feed', frame)

        if cv2.waitKey(1) == ord('q'):
            break

    cap.release()
    cv2.destroyAllWindows()

show_live_feed()


